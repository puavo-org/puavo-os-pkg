#!/bin/sh

set -eu

command=$1
shift

links='
  /usr/bin/projectlibre
  /usr/share/applications/projectlibre.desktop
  /usr/share/doc/projectlibre
  /usr/share/mime/packages/projectlibre.xml
  /usr/share/pixmaps/projectlibre.png
  /usr/share/projectlibre
  /usr/share/pixmaps/projectlibre.png
'


case "${command}" in
    configure)
	upstream_dir=$1
        for f in $links; do
          mkdir -p "$(dirname "$f")"
          ln -fns -T "${upstream_dir}${f}" "$f"
        done
	;;
    unconfigure)
      rm -f $links
	;;
    unpack)
	upstream_pack=$1
	upstream_dir=$2

        dpkg -x "$upstream_pack" "$upstream_dir"
	;;
    *)
	;;
esac
